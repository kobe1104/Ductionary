{
  "manifest_version": 2,

  "name": "QuickDictionary",
  "description": "This extension gives definitions of a word users click on from urban dictionary.",
  "version": "1.0",

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["jquery-3.1.1.min.js", "content.js"],
      "css": ["window.css"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "hello!!"
  },
  "icons": {

  },
  "background": { "scripts": ["background.js"] },

  "permissions": [
    "tabs",
    "activeTab",
    "https://ajax.googleapis.com/",
    "https://mashape-community-urban-dictionary.p.mashape.com/define"
  ]
}
