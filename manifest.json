{
  "manifest_version": 2,

  "name": "Ductionary",
  "description": "Provides urban definitions of English words by double clicking words on any web pages while holding 'Alt' key.",
  "version": "1.0",

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["jquery-3.1.1.min.js", "content.js"],
      "css": ["window.css"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],

  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Ductionary"
  },
  "icons": {
    "16": "icons/chrome_icon16.png",
    "48": "icons/chrome_icon48.png",
    "128": "icons/chrome_icon128.png"
  },

  "permissions": [
    "tabs",
    "activeTab",
    "https://ajax.googleapis.com/",
    "https://mashape-community-urban-dictionary.p.mashape.com/define"
  ]
}
